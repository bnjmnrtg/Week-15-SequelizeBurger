<h1>Burgers Tracker</h1>

<h2>Burgers that have not been Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devour}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit">Add to Devoured!</button>
        </form>

    
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="false">
          <button type="submit">ADD to Not Devoured!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee"> Have you Devoured?</label><br>
    <input type="radio" name="devour" value="1" checked> Have Devoured<br>
    <input type="radio" name="devour" value="0"> Have Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
